    <li><%= library["name"] %></li>
  <% end %>
<% end %>

<% if @results.restaurants %>
  <h5 class="restaurants-summary"><%= "There are #{@results.restaurants.count} restaurants stores within #{params["radius"]} miles of this address." %></h5>
  <% @results.restaurants.each do |restaurant| %>
    <li><%= restaurant["name"] %></li>
  <% end %>
<% end %>


