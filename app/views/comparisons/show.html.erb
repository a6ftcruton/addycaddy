<h3><%= @first_address.address %></h3>

<% if @results.crime %>
<ul>
  <h5 class="crime-summary"><%= "This year there were #{@results.crime.length} crimes within #{params["radius"]} miles of this address." %></h5>
  <% @results.crime.each do |crime| %>
    <li><%= crime.offense_type %>&nbsp<%= crime.date.to_date %></li>
  <% end %>
</ul>
<% end %>

<% if @results.parks %>
  <h5 class="park-summary"><%= "There are #{@results.parks.count} parks within #{params["radius"]} miles of this address." %></h5>
  <% @results.parks.each do |park| %>
    <li><%= park["name"] %></li>
  <% end %>
<% end %>

<% if @results.grocers %>
  <h5 class="grocers-summary"><%= "There are #{@results.grocers.count} grocery stores within #{params["radius"]} miles of this address." %></h5>
  <% @results.grocers.each do |grocer| %>
    <li><%= grocer["name"] %></li>
  <% end %>
<% end %>

<% if @results.libraries %>
