<h3 class="large-6 large-centered columns"><%= "Within #{params['radius']} miles of each address there are: " %></h3>

<h2 class="first-address large-6 columns"><%= @first_address.address  %></h2>
<h2 class="second-address large-6 columns"><%= @second_address.address %></h2>

<% @queries.each do |query| %>
    <div class="results large-6 columns">
      <h4>
        <a href="#" class="<%= "first-address-" + query %>">
          <%= "#{(@results.send(query.to_sym)).first.length} " + query %>
        </a>
      </h4>
      <% @results.send(query.to_sym).first.map do |result| %>
        <%= render 'conditional_results', result: result %>
      <% end %>
    </div>

    <div class="results large-6 columns">
      <h4><a href="#" class="<%= "second-address-" + query %>">
        <%= "#{(@results.send(query.to_sym)).last.length} " + query %>
      </a></h4>
      <% @results.send(query.to_sym).last.map do |result| %>
          <%= render 'conditional_results', result: result %>
      <% end %>
    </div>
<% end %>

